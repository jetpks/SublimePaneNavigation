[
    // Pane Navigation
    {
        "keys": ["ctrl+l"],
        "command": "pane_navigation",
        "args": {"direction": 1}
    },

    {
        "keys": ["ctrl+h"],
        "command": "pane_navigation",
        "args": {"direction": -1}
    },

    // Key bindings to send tabs between open panes
    { "keys": ["ctrl+shift+h"], "command": "move_to_group", "args": { "group": 0 } },
    { "keys": ["ctrl+shift+l"], "command": "move_to_group", "args": { "group": 1 } }
]
